<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp"
    tools:context=".activities.Activity3">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="500dp"

        >
        <TextView
            android:id="@+id/gameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Corrección de Oraciones"
            android:background="@drawable/white_solid"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/gameDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/blue"
        android:text="Selecciona la palabra incorrecta de la siguiente oración para poder continuar."
        android:textSize="18sp"
        android:background="@color/white"
        android:textStyle="bold"
        tools:ignore="NotSibling" />



    <TextView
        android:id="@+id/sentenceTextView"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:layout_below="@id/gameDescriptionTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/white"
        android:text="Oraciones con error"
        android:textSize="18sp" />

    <Button
        android:id="@+id/optionButton1"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sentenceTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"

        />

    <Button
        android:id="@+id/optionButton2"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/optionButton3"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp" />

</RelativeLayout>
